---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { Button } from "@/components/ui/button";

const email = Astro.url.searchParams.get("email");
---

<AuthLayout title="Sprawdź email">
  <div class="space-y-6 text-center">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold tracking-tight">Sprawdź swoją skrzynkę pocztową</h2>
      <p class="text-sm text-muted-foreground">
        {
          email
            ? `Wysłaliśmy link do resetowania hasła na adres ${email}. Kliknij w link, aby ustawić nowe hasło.`
            : "Wysłaliśmy link do resetowania hasła na Twój adres email. Kliknij w link, aby ustawić nowe hasło."
        }
      </p>
    </div>

    <div class="rounded-lg bg-blue-50 p-4 border border-blue-200">
      <p class="text-sm text-blue-900">Nie widzisz maila? Sprawdź folder spam lub poczekaj kilka minut.</p>
    </div>

    <a href="/login">
      <Button variant="outline" className="w-full"> Powrót do logowania </Button>
    </a>
  </div>
</AuthLayout>
